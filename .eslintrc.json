{
  "extends": [
    "plugin:react/recommended",
		"plugin:import/typescript",
		"plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
		"no-console": "warn",
		"react/react-in-jsx-scope": "off",
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".ts", ".tsx"] }],
		"react/prop-types": 0
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
	},
	"plugins": ["prettier"],
  "env": {
    "es6": true,
    "browser": true,
		"node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
